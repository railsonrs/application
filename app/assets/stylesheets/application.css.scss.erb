 @import 'bootstrap';

 .bold {
 	position: relative;
 	font-weight: bold; 
 }

 body {
 	position: relative;
 	font-size: 16px;
 }

 .navbar-default {
	position: fixed;
 	z-index: 999;
 	background-color: #EEE;

 	.navbar-brand {
 		position: relative;
 		font-size: 18px;
 		text-transform: uppercase;
 		font-weight: bold;
 	}

 	i {
 		font-size: relative;
 		font-size: 20px;
 	}
 }

 footer {
 	position: relative;
 	margin-top: 50px;
 	padding-top: 50px;
 	padding-bottom: 50px;
 	background-color: #EEE;
 }